<ul id="nav" class="dropdown dropdown-horizontal">	
	<?php
$level=mysql_query("select level,levelOfRegistration from registration where regNum='$_SESSION[uname]'");
list($currentLevel,$registrationLevel)=mysql_fetch_array($level);

$fees4=mysql_query("select sum(amountPaid),accomodation from schoolFees where regNum='$_SESSION[uname]' and level='4'");
list($schoolFees4,$accomodation)=mysql_fetch_array($fees4);
if ($accomodation=="boarding")
$rate4=mysql_query("select boardingRate from schoolFeesRate where level='4'");
else
$rate4=mysql_query("select dayRate from schoolFeesRate where level='4'");

list($feesRate4)=mysql_fetch_array($rate4);

$fees5=mysql_query("select sum(amountPaid),accomodation from schoolFees where regNum='$_SESSION[uname]' and level='5'");
list($schoolFees5,$accomodation)=mysql_fetch_array($fees5);
if ($accomodation=="boarding")
$rate5=mysql_query("select boardingRate from schoolFeesRate where level='5'");
else
$rate5=mysql_query("select dayRate from schoolFeesRate where level='5'");

list($feesRate5)=mysql_fetch_array($rate5);

$fees6=mysql_query("select sum(amountPaid),accomodation from schoolFees where regNum='$_SESSION[uname]' and level='6'");
list($schoolFees6,$accomodation)=mysql_fetch_array($fees6);
if ($accomodation=="boarding")
$rate6=mysql_query("select boardingRate from schoolFeesRate where level='6'");
else
$rate6=mysql_query("select dayRate from schoolFeesRate where level='6'");
list($feesRate6)=mysql_fetch_array($rate6);

#check if a student has paid school fees and display a link for displaying results
if ($registrationLevel==4 and $currentLevel==4)
{
if ($schoolFees4==$feesRate4)
echo "<li id='n-news'><a href='individualStudentResults.php?level=4' class='dir'>NTA Level 4 Results</a></li>";
}

else if ($registrationLevel==4 and $currentLevel==5 )
{
if ($schoolFees4==$feesRate4)
echo "<li id='n-news'><a href='individualStudentResults.php?level=4' class='dir'>NTA Level 4 Results</a></li>";
if ($schoolFees5==$feesRate5)
echo "<li id='n-news'><a href='individualStudentResults.php?level=5' class='dir'>NTA Level 5 Results</a></li>";
}	

else if ($registrationLevel==4 and $currentLevel==6)
{
if ($schoolFees4==$feesRate4)
echo "<li id='n-news'><a href='individualStudentResults.php?level=4' class='dir'>NTA Level 4 Results</a></li>";
if ($schoolFees5==$feesRate5)
echo "<li id='n-news'><a href='individualStudentResults.php?level=5' class='dir'>NTA Level 5 Results</a></li>";
if ($schoolFees6==$feesRate6)
echo "<li id='n-news'><a href='individualStudentResults.php?level=6' class='dir'>NTA Level 6 Results</a></li>";
}	

else if ($registrationLevel==5 and $currentLevel==5)
{
if ($schoolFees5==$feesRate5)
echo "<li id='n-news'><a href='individualStudentResults.php?level=5' class='dir'>NTA Level 5 Results</a></li>";
}	

else if ($registrationLevel==5 and $currentLevel==6)
{
if ($schoolFees5==$feesRate5)
echo "<li id='n-news'><a href='individualStudentResults.php?level=5' class='dir'>NTA Level 5 Results</a></li>";
if ($schoolFees6==$feesRate6)
echo "<li id='n-news'><a href='individualStudentResults.php?level=6' class='dir'>NTA Level 6 Results</a></li>";
}

else if ($registrationLevel==6 and $currentLevel==6)
{
if ($schoolFees6==$feesRate6)
echo "<li id='n-news'><a href='individualStudentResults.php?level=6' class='dir'>NTA Level 6 Results</a></li>";
}
$currLevel=$currentLevel+1;
?>
<li><a href="newYearRegistration.php" onClick="return confirm('Are You Sure You Want To Register Into NTA Level <?php echo $currLevel?>')">Register For New Accademic Year</a></li>	
<li><a href="logout.php">Logout</a></li>
</ul>
